---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LikesList from '../components/LikesList.astro';
import RemindersList from '../components/RemindersList.astro';
import '../styles/global.css';
---

<Layout title="Para mi persona favorita">
  <div id="content" class="hidden flex flex-col min-h-screen">
    <Header />
    
    <main class="container mx-auto p-4 py-8 flex-grow">
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-center mb-8 text-dark">Cosas que me gustan de ti</h2>
        <LikesList />
      </section>
      
      <div class="w-full h-px bg-white my-12"></div>
      
      <section class="mb-12">
        <h2 class="text-3xl font-bold text-center mb-8 text-dark">Cosas que me recuerdan a ti</h2>
        <RemindersList />
      </section>
    </main>
    
    <Footer />
  </div>
  
  <div id="auth-message" class="h-screen flex items-center justify-center bg-gray-100">
    <div class="text-center p-8 bg-white rounded-lg shadow-md">
      <h2 class="text-2xl font-bold text-red-500 mb-4">Acceso no autorizado</h2>
      <p class="mb-4">Necesitas ingresar la contraseña correcta para ver esta página.</p>
      <a href="/" class="bg-red-800 text-white px-4 py-2 rounded hover:bg-opacity-90">Regresar al inicio</a>
    </div>
  </div>
</Layout>

<script>
  import { isLoggedIn } from '../utils/authUtils';
  
  // Verificar si el usuario está autenticado
  const content = document.getElementById('content');
  const authMessage = document.getElementById('auth-message');
  
  if (isLoggedIn()) {
    content?.classList.remove('hidden');
    authMessage?.classList.add('hidden');
  } else {
    content?.classList.add('hidden');
    authMessage?.classList.remove('hidden');
  }
</script>