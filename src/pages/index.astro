---
import Layout from '../layouts/Layout.astro';
import PasswordForm from '../components/PasswordForm.astro';
import '../styles/global.css';
---

<Layout title="Iniciar Sesión :3">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-red-400 via-red-500 to-red-950 bg-opacity-50 py-12 px-4 sm:px-6 lg:px-8">
    <PasswordForm />
  </div>
</Layout>

<script>
  import { isLoggedIn } from '../utils/authUtils';
  
  // Verificar si el usuario ya está autenticado
  if (isLoggedIn()) {
    window.location.href = '/home';
  }
</script>