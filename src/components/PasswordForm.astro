---
// Componente de formulario de contraseña
---

<div class="max-w-md w-full bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="px-6 py-8">
      <h2 class="text-center text-3xl font-bold text-dark mb-6">Ingresa la contraseña :3</h2>
      <p class="text-center text-gray-400 mb-6 text-sm italic">Pista: es nuestro aniversario (sin el año)</p>
      <form id="password-form" class="space-y-6">
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
          <input 
            type="password" 
            id="password" 
            required 
            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary"
          >
        </div>
        
        <div>
          <button 
            type="submit" 
            class="w-full bg-primary text-white py-2 px-4 rounded-md hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
          >
            Ingresar ❤️
          </button>
        </div>
      </form>
      
      <div id="error-message" class="mt-4 text-red-500 text-center hidden">
        Contraseña incorrecta :c
      </div>
    </div>
  </div>
  
  <script>
    import { verifyPassword, login } from '../utils/authUtils';
    
    const form = document.getElementById('password-form');
    const errorMessage = document.getElementById('error-message');
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const passwordInput = document.getElementById('password') as HTMLInputElement;
      const password = passwordInput.value;
      
      if (verifyPassword(password)) {
        login();
        // Usar setTimeout para evitar problemas de redirección
        setTimeout(() => {
          window.location.href = '/home';
        }, 100);
      } else {
        errorMessage?.classList.remove('hidden');
        passwordInput.value = '';
      }
    });
  </script>