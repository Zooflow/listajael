---
// Este componente muestra la lista de cosas que te recuerdan a ella
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="reminders-container">
    <!-- La lista se cargará dinámicamente con JavaScript -->
    <p class="col-span-full text-center text-gray-500 italic" id="no-reminders-message">
      No hay elementos en la lista todavía.
    </p>
  </div>
  
  <script>
    function loadReminders() {
      const remindersContainer = document.getElementById('reminders-container');
      const noRemindersMessage = document.getElementById('no-reminders-message');
      
      // Obtener la lista del localStorage
      const remindersList = JSON.parse(localStorage.getItem('remindersList') || '[]');
      
      // Mostrar mensaje si no hay elementos
      if (remindersList.length === 0) {
        if (noRemindersMessage) noRemindersMessage.classList.remove('hidden');
        return;
      }
      
      // Ocultar mensaje si hay elementos
      if (noRemindersMessage) noRemindersMessage.classList.add('hidden');
      
      // Limpiar el contenedor antes de añadir los elementos
      if (remindersContainer) {
        // Mantener solo el mensaje de "no hay elementos"
        while (remindersContainer.children.length > 1) {
          remindersContainer.removeChild(remindersContainer.lastChild);
        }
        
        // Añadir cada elemento a la lista
        remindersList.forEach((item, index) => {
          const card = document.createElement('div');
          card.className = 'bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500';
          card.innerHTML = `
            <p class="text-lg font-medium">${item}</p>
            <div class="flex justify-end">
              <!-- <button class="delete-btn text-red-500 hover:text-red-700" data-index="${index}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </button> -->
            </div>
          `;
          remindersContainer.appendChild(card);
        });
        
        // Añadir listener para los botones de eliminar
        document.querySelectorAll('.delete-btn').forEach(btn => {
          btn.addEventListener('click', function() {
            const index = parseInt(this.getAttribute('data-index') || '0');
            deleteReminderItem(index);
          });
        });
      }
    }
    
    function deleteReminderItem(index) {
      // Obtener la lista actual
      const remindersList = JSON.parse(localStorage.getItem('remindersList') || '[]');
      
      // Eliminar el elemento
      remindersList.splice(index, 1);
      
      // Guardar la lista actualizada
      localStorage.setItem('remindersList', JSON.stringify(remindersList));
      
      // Recargar la lista
      loadReminders();
    }
    
    // Cargar la lista cuando el DOM esté listo
    document.addEventListener('DOMContentLoaded', loadReminders);
  </script>